
QGLWidget {
    background: black;
}

QMainWindow, QDockWidget {
    color: white;
    background: black;
}

QDockWidget QLabel {
    color: white;
}

QDockWidget::title {
    background: black;
}

QDockWidget QLabel#turnLabel {
    color: orange;
}

QDockWidget QToolButton {
    background: #3f3f3f;
    border: 2px solid gray;
    border-radius: 5px;
    color: orange;
}

QDockWidget QToolButton::hover {
    border: 2px solid orange;
}

QGroupBox {
    background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                      stop: 0 #303030, stop: 1 #3a3a3a);
    border: 2px solid gray;
    border-radius: 5px;
    margin-top: 1ex;
    color: white
 }

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top center; /* position at the top center */
    padding: 0 3px;
}

PlayerPanel QGroupBox QLabel {
    color: white;
    font-size: 12px;
}

QStatusBar {
    background: black;
    color: orange;
}

QDialog {
    background: #3f3f3f;
}

QCheckBox {
    background: #3f3f3f;
    color: white;
}

QCheckBox::hover {
    color: white;
}

QPushButton {
    border-style: outset;
    border: 2px solid black;
    border-radius: 5px;
    padding: 4px;
    background: #9f9f9f;
    color: black;
}

QPushButton::disabled {
    background: #101010;
    color: gray;
    border: 2px solid black;
}

QPushButton::hover {
    border: 2px solid orange;
}

QDialog QLabel {
    color: white;
}

QTextEdit, QLineEdit {
    background: #050505;
    color: white;
    font-size: 13px;
    border-style: outset;
    border-color: #3f3f3f;
    border-width: 1px;
    border-radius: 5px;
}

QTextEdit::disabled, QLineEdit::disabled {
    background: #3f3f3f;
    color: gray;
}

QDialog#gameConnector QLineEdit {
    font-size: 14px;
}

